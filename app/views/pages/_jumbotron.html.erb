<main>
	<div class="hero_single version_2">
		<div class="opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-9 col-lg-10 col-md-8">
						<h1 class="text-white">Welcome to the ArtCraftBay</h1>
						<p>The best place for authentic Artworks</p>
						<%= form_tag results_path, method: "get" do %>
							<div class="row no-gutters custom-search-input">
								<div class="col-lg-10">
									<div class="form-group">
										<%=text_field_tag :search, nil, placeholder: 'Enter search term here...', class: 'form-control'%>
									</div>
								</div>
								<div class="col-lg-2">
									<%= submit_tag "Search" %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
				<!-- /row -->
			</div>
		</div>
	</div>
	<!-- /hero_single -->
</main>
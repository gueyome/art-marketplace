<body>

  <main>

		<div class="bg_gray pattern" id="submit">
			<div class="container margin_60_40">
				<div class="row justify-content-center">
					<div class="col-lg-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="text-center add_bottom_15">
              <h4>Edit account</h4>
              <p>Sell and buy all your artworks with ❤️ </p>
              </div>
              <div id="message-register"></div>
              <form method="post" action="assets/register.php" id="register">
                <h6>Email</h6>
                  <!-- /row -->
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "string", class: "form-control"  %>
                    </div>
                  </div>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <h6>Password (leave blank if you don't want to change it)</h6>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= f.password_field :password, autocomplete: "new-password", type: "string", class: "form-control" %>
                      <% if @minimum_password_length %>
                        <br />
                        <em><%= @minimum_password_length %> characters minimum</em>
                      <% end %>
                    </div>
                  </div>
                </div>

                <h6>Password confirmation</h6>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "string", class: "form-control" %>
                    </div>
                  </div>
                </div>

                <h6>Current password (we need your current password to confirm your changes)</h6>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= f.password_field :current_password, autocomplete: "current-password", type: "string", class: "form-control" %>
                    </div>
                  </div>
                </div>

                <div class="form-group text-center mt-3"><%= f.submit "Update", class: "btn_1" %></div>
              </form>
            </div>
            <% end %>
					</div>
				</div>
			</div>
			<!-- /container -->
		</div>
		<!-- /bg_gray -->
	</main>
	<!-- /main -->
</body>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
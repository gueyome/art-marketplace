<body>

  <main>

		<div class="bg_gray pattern" id="submit">
			<div class="container margin_60_40">
				<div class="row justify-content-center">
					<div class="col-lg-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
						<div class="text-center add_bottom_15">
							<h4>Registration</h4>
							<p>Sell and buy all your artworks with ❤️ </p>
						</div>
						<div id="message-register"></div>
							<form method="post" action="assets/register.php" id="register">
								<h6>Main information</h6>
								<div class="row">
									<div class="col-lg-12">
										<div class="form-group">
                      <%= f.text_field :username, autofocus: true, placeholder: "Username", type: "text", class: "form-control" %>
										</div>
									</div>
								</div>
								<!-- /row -->
                <div class="row">
									<div class="col-lg-12">
										<div class="form-group">
                      <%= f.text_field :first_name, autofocus: true, placeholder: "First name", type: "string", class: "form-control" %>
										</div>
									</div>
								</div>
                <div class="row">
									<div class="col-lg-12">
										<div class="form-group">
                      <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", type: "string", class: "form-control" %>
										</div>
									</div>
								</div>
								<div class="row add_bottom_15">
									<div class="col-lg-12">
										<div class="form-group">
                      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", type: "string", class: "form-control" %>
										</div>
									</div>
								</div>
              
								<h6>Password</h6>
								<div class="row">
									<div class="col-lg-12">
											<div class="form-group" >
                       <%= f.password_field :password, autofocus: true, placeholder: "Password", type: "password", class: "form-control" %>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-12">
										<div class="form-group">
<%= f.text_field :password_confirmation, autofocus: true, placeholder: "Password confirmation", type: "string", class: "form-control" %>								
										</div>
									</div>
								</div>

								<!-- /row -->
                <div class="form-group text-center mt-3"><%= f.submit "Sign up", class: "btn_1" %></div>
							</form>
					  </div>
            <% end %>
          </div>
				</div>
			</div>
			<!-- /container -->
		</div>
		<!-- /bg_gray -->
		
	</main>
	<!-- /main -->

</body>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="text-center add_bottom_15">
          <h4>Log in</h4>
          <p>Sell and buy all your artworks with ❤️ </p>
        </div>
        <div id="message-register"></div>
            <h6>Email</h6>
            <div class="row add_bottom_15">
              <div class="col-lg-12">
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, placeholder: "Email Address", type: "string", class: "form-control" %>
                </div>
              </div>
            </div>
            
            <h6>Password</h6>
            <div class="row">
              <div class="col-lg-12">
                  <div class="form-group" type="password">
                    <%= f.password_field :password, autofocus: true, placeholder: "Password", type: "password", class: "form-control" %>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <!-- /row -->
            <div class="form-group text-center mt-3"><%= f.submit "Log in", class: "btn_1" %></div>
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
            <br>
            <br>
            <br>
          </div>
          <% end %>
    </div>
  </div>
</div>

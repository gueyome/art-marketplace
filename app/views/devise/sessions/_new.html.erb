<body>

  <main>

		<div class="bg_gray pattern" id="submit">
			<div class="container margin_60_40">
				<div class="row justify-content-center">
					<div class="col-lg-5">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
						<div class="text-center add_bottom_15">
							<h4>Log in</h4>
							<p>Sell and buy all your artworks with ❤️ </p>
						</div>
						<div id="message-register"></div>
							<form method="post" action="assets/register.php" id="register">
								<h6>Email</h6>
								<div class="row add_bottom_15">
									<div class="col-lg-12">
										<div class="form-group">
                      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", type: "string", class: "form-control" %>
										</div>
									</div>
								</div>
								
								<h6>Password</h6>
								<div class="row">
									<div class="col-lg-12">
										<div class="form-group" type="password">
                      <input type="password" <%= f.password_field :password, autofocus: true, placeholder: "Password", type: "string", class: "form-control" %>>
										</div>
									</div>
								</div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

								<!-- /row -->
                <div class="form-group text-center mt-3"><%= f.submit "Log in", class: "btn_1" %></div>
							  <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </form>
					</div>
          <% end %>
				</div>
			</div>
			<!-- /container -->
		</div>
		<!-- /bg_gray -->
		
	</main>
	<!-- /main -->

</body>


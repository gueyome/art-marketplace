<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Change your password</h1>
        <%= f.hidden_field :reset_password_token %>
        
        <div class="form-group">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
            <div class="form-group">
          <%=  f.password_field :password, autofocus: true, autocomplete: "new-password", type: "password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions mb-1">
          <%= f.submit "Change my password", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
